<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@drawable/registration_backg"
    tools:context=".Registration">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629">

        <EditText
            android:id="@+id/etFNameReg"
            android:layout_width="237dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:hint="First Name"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etStudentNumReg"
            android:layout_width="237dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:hint="Student Number"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/etLNameReg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/etLNameReg"
            tools:layout_editor_absoluteY="219dp" />

        <EditText
            android:id="@+id/etPasswordReg"
            android:layout_width="237dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:hint="Password"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/etStudentNumReg"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="@+id/etStudentNumReg"
            tools:layout_editor_absoluteY="297dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etLNameReg"
            android:layout_width="237dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:hint="Last Name"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/etFNameReg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/etFNameReg"
            tools:layout_editor_absoluteY="138dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0086CA"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="362dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>